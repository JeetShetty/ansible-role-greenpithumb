[Unit]
Description=GreenPiThumb Backend Service

[Service]
ExecStart=/usr/bin/python \
  {{ greenpithumb_frontend_path }}/greenpithumb/greenpithumb.py  \
  --db_file={{ greenpithumb_data_path }}/greenpithumb.db \
  --verbose
WorkingDirectory={{ greenpithumb_backend_path }}
User={{ greenpithumb_backend_user }}

[Install]
WantedBy=multi-user.target
