[Unit]
Description=GreenPiThumb Frontend Service

[Service]
ExecStart=/usr/bin/python {{ greenpithumb_frontend_path }}/server/server.py --port {{ greenpithumb_frontend_app_port }}
WorkingDirectory={{ greenpithumb_frontend_path }}
User={{ greenpithumb_frontend_user }}

[Install]
WantedBy=multi-user.target
